<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="customer_account_navigation">
            <block class="Magento\Customer\Block\Account\SortLinkInterface"
                   name="customer-account-navigation-custom">
                <arguments>
                    <argument name="path" xsi:type="string">core/form/index</argument>
                    <argument name="label" xsi:type="string">Add Comments</argument>
                </arguments>

            </block>
            <block class="Magento\Customer\Block\Account\SortLinkInterface"
                   name="customer-account-navigation-module-index-history">
                <arguments>
                    <argument name="path" xsi:type="string">core/main/index</argument>
                    <argument name="label" xsi:type="string">View Comments</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
